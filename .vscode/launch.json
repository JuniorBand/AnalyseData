{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Debug programa",
      "type": "cppdbg",
      "request": "launch",
      "program": "programa.exe",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe",
      "preLaunchTask": "Compilar C",
      "setupCommands": [
        {
          "description": "Habilitar pretty-printing para gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}


